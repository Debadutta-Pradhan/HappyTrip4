pipeline {
 agent any
  stages {
    stage('SCM') {
      steps {
         git 'https://github.com/Debadutta-Pradhan/HappyTrip4.git'
       }
    }
   stage("Build") {
    tools{
        jdk 'Jdk_1.8'
        maven 'apache-maven-3.6.3'
        }
     steps {
    bat '''
           cd happytrip-code
           mvn clean install
	   java -version
           mvn -version
           mvn clean package
                   
       '''
   }
   }
   stage('SonarQube') {
                steps {
                   bat '''
                       cd happytrip-code
                     mvn sonar:sonar \
                             -Dsonar.projectKey=186ff1c937cbd8e4334413f9512ac2860973d79c \
                             -Dsonar.host.url=http://localhost:9000 \
                             -Dsonar.login=7c8f06e9919bef784b20055108989b17dfdc85c2
                   '''
   }
   }
stage('Deploy') {
                  steps{
				echo "Deploying"
				deploy adapters: [tomcat7(credentialsId: 'd8511587-aae6-4afd-ad92-782639ac4b60', path: '', url: 'http://localhost:8090')], contextPath: 'happytrip', war: '**/*.war'
		}
}
}
}


